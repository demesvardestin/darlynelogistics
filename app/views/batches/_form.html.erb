<%= form_for(@batch) do |f| %>
    <% if @batch.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@batch.errors.count, "error") %> prohibited this batch from being saved:</h2>
    
          <ul>
          <% @batch.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
        <%= f.text_area :notes, class:"form-control batch-notes-field", autofocus: true, placeholder:"Add a note to this batch" %>
    </div>
    <div class="field">
        <%= f.text_field :pharmacist, class:"form-control", autofocus: true, placeholder:"Pharmacist Signature" %>
    </div>
    <div class="actions text-right">
        <span class="cancel-batch batch-new"><%= link_to "Cancel", batches_path, class:"btn btn-primary btn-lg white" %></span>
        <span class="submit-batch batch-new-1"><%= f.submit "Add", class:"btn btn-primary btn-lg new-batch-button"%></span>
    </div>
<% end %>