<% @batches.reverse.each do |batch| %><div class="table-content container batches-row" pharmacist="<%= batch.pharmacist %>" date="<%= timestamp(batch) %>" id="<%= batch.id %>"><div class="row"><div class="col-md-2"><span class="batches-details"><%= link_to batch.id, batch_path(batch), class:"theme-blue background-transparent no-underline" %></span></div><div class="col-md-4"><span class="batches-details theme-blue"><%= link_to timestamp(batch), batch_path(batch), class:"theme-blue background-transparent no-underline" %></span></div><div class="col-md-2"><button class="btn btn-secondary medium-size-btn white check-status<%= batch.id%>" id="<%= batch.request_id %>" batch="<%= batch.id %>" onclick="checkStatus(this)"><i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw font-11 load-status" id="loadStatus<%= batch.id %>"></i><span id="statusPlaceholder<%= batch.id %>"><i class="fa fa-info-circle" id="checkStatusIcon<%= batch.id %>"></i> Check Status</span></button></div><div class="col-md-4"><div class="row"><div class="col-md-6"><%= link_to batch_path(batch), class:"btn btn-primary white medium-size-btn", remote: true, method: :delete do %><i class="fa fa-times-circle"></i> Delete Batch<% end %></div><div class="col-md-6"><%= link_to batch_path(batch), class:"btn btn-info white medium-size-btn d--toggle--info" do %><i class="fa fa-search"></i> View Batch<% end %></div></div></div></div></div><% end %>