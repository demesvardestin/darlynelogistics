<% if @rejected %>
    <div>
        <div class="text-center">
            <i class="fa fa-exclamation-circle theme-yellow" style="font-size: 40px;"></i>
            <div class="add-padding-top font-18">
                <span class="theme-blue">
                    <%= @rejected %>
                </span>
            </div>
        </div>
    </div>
<% elsif @rx.nil? %>
    <div>
        <div class="text-center">
            <i class="fa fa-exclamation-circle theme-yellow" style="font-size: 40px;"></i>
        </div>
        <div class="add-padding-top font-18">
            <span class="theme-blue">
                An error occurred while sending your request, please try again.
            </span>
        </div>
    </div>
<% else %>
    <div>
        <div class="text-center add-padding-bottom"> 
            <i class="fa fa-check-circle theme-green" style="font-size: 60px;"></i> 
        </div> 
        <div class="text-center add-padding-bottom theme-blue"> 
            <h5 class="font-16">
                Your request has been sent. You will receive 
                a text message from your pharmacist with updates regarding your delivery.
            </h5> 
        </div>
        <div class="text-center"> 
            <a class="btn btn-primary white" href="/status">
                <i class="fa fa-plus-circle"></i> Start a new search
            </a>
        </div>
    </div>
<% end %>