<% if @rejected %>
    <div class="add-padding-top-10">
        <div class="col-md-12 add-padding-top text-center">
            <i class="fa fa-exclamation-circle theme-yellow" style="font-size: 40px;"></i>
        </div>
        <div class="add-padding-top font-18">
            <span class="theme-blue">
                <%= @rejected %>
            </span>
        </div>
    </div>
<% elsif @rx.nil? %>
    <div class="add-padding-top-10">
        <div class="col-md-12 add-padding-top text-center">
            <i class="fa fa-exclamation-circle theme-yellow" style="font-size: 40px;"></i>
        </div>
        <div class="add-padding-top font-18">
            <span class="theme-blue">
                An error occurred while sending your request, please try again.
            </span>
        </div>
    </div>
<% else %>
    <div>
        <div class="col-md-12 add-padding-top-5 text-center"> 
            <i class="fa fa-check-circle theme-green" style="font-size: 40px;"></i> 
        </div> 
        <div class="col-md-12 add-padding-top-5 text-center theme-blue"> 
            <h5 class="font-14">
                Your request has been sent. You will receive 
                a text message from your pharmacist with updates regarding your delivery.
            </h5> 
        </div>
        <div class="col-md-6 offset-md-3 add-padding-top-5 text-center"> 
            <a class="btn btn-light btn-block transaction-buttons white" href="/status">
                <i class="fa fa-plus-circle"></i> Start new search
            </a>
        </div>
    </div>
<% end %>