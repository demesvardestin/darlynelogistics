<%= form_for @driver, :html => { multipart: true, :class => "form-horizontal image" } do |f| %>
    <% if @driver.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@driver.errors.count, "error") %> prohibited this driver from being saved:</h2>
        <ul>
            <% @driver.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <h6>We use this information to deposit your earnings into your bank account<h6>
    </div>
    <div class="field">
        <%= f.text_field :bank_account_number, class:"form-control", autofocus: true, placeholder:"Bank account number" %>
    </div>
    <div class="field">
        <%= f.text_field :country, class:"form-control", autofocus: true, placeholder:"Country" %>
    </div>
    <div class="field">
        <%= f.text_field :account_holder_name, class:"form-control", autofocus: true, placeholder:"Name of account holder" %>
    </div>
    <div class="">
        <%= f.hidden_field :account_holder_type, autofocus: true, :value => 'Individual' %>
    </div>
    <div class="field">
        <%= f.text_field :routing_number, class:"form-control", autofocus: true, placeholder:"Routing Number" %>
    </div>

    <div class="actions text-right">
        <%= f.submit "Submit", class:"btn btn-light white driver-signup-button" %>
        <%= link_to :back, class:"btn btn-primary" do %>
            Cancel
        <% end %>
    </div>
<% end %>