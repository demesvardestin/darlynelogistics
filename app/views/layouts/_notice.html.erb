<% if flash[:notice] %>
  <section class="notice">
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-success no-border-radius alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  </section>
<% end %>