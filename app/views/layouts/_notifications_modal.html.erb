<!-- Notifications Modal -->
<div class="modal fade" id="notificationsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="border-top: 3px solid #04c004 !important; border: none;">
      <div class="modal-header no-border-radius" style="border-bottom-width: 2px; padding-top: 15px; background: #3484c6; padding-bottom: 15px;">
        <h5 class="modal-title font-14 weighted white" id="exampleModalLabel"><i class="fa fa-bell-o"></i> Notifications</h5>
        <a class="font-13 white cursor-pointer background-transparent" id="dismissAll"><span class="badge badge-light">Dismiss all</span></a>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="notificationsModalBody" style="padding: 0;">
        <% if notifications.count == 0 %>
          <%= render 'layouts/notification_placeholder' %>
        <% else %>
          <%= render 'layouts/all_notifications' %>
        <% end %>
      </div>
    </div>
  </div>
</div>