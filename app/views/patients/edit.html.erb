<body>
    <div class="patient-show">
        <section class="patient-profile-header">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8 patient-details">
                            <h5><%= @patient.name %></h5>
                            <h6 class="patient-profile-detail"><span class="theme-blue"><strong>Address</strong></span>: <%= @patient.address %></h6>
                            <h6 class="patient-profile-detail"><span class="theme-blue"><strong>Phone</strong></span>: <%= @patient.phone %></h6>
                            <h6 class="patient-profile-detail"><span class="theme-blue"><strong>Date of Birth</strong></span>: <%= @patient.dob %></h6>
                            <h6 class="patient-profile-detail"><span class="theme-blue"><strong>Delivery Instructions</strong></span>: <%= @patient.delivery_instructions %></h6>
                        </div>
                        <div class="col-md-3 offset-md-1 profile-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <%= link_to patient_path(@patient), class:"btn btn-light btn-block white" do %>
                                        <i class="fa fa-long-arrow-left"></i> Patient Profile
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="patient-prescriptions">
            <div class="card">
                <div class="card-body">
                    <%= render 'form' %>
                </div>
            </div>
        </section>
    </div>
</body>