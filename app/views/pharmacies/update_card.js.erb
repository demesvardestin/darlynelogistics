$('#pharmacyCard').html(`
    <section class="row" id="confirmation-form">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 last-four-div">
                            <span class="last-four"><%= render 'pharmacies/last_four' %></span>
                        </div>
                        <div class="col-md-2 offset-md-6">
                            <img src="/images/<%= current_pharmacy.card_brand %>.png" class="payment-vector">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12" id="action-button">
            <a class="btn btn-info transaction-buttons white" href="settings#v-pills-profile"><i class="fa fa-pencil"></i> Edit Card Info</a>
        </div>
    </section>
    
    <section id="card-form">
        <form action="/pharmacy/update_card" method="get" id="payment-form">
            <div class="form-row row">
                <label for="card-element">
                  <h6 class="font-16">Add a payment method on file</h6>
                </label>
                <div id="card-element" class="col-md-12">
                  <!-- a Stripe Element will be inserted here. -->
                </div>
                
                <!-- Used to display form errors -->
                <div id="card-errors" role="alert" class="col-md-12"></div>
            </div>
            
            <div class="row">
                <div class="col-md-12 submit-card">
                    <button class="btn btn-info font-14 transaction-buttons"><i class="fa fa-check-circle"></i> Save card info</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-md-2 cancel-submission-div">
                <a class="cancel-submission" onclick="hideCardForm()">Cancel</a>
            </div>
        </div>
        <%= render 'common/spinner' %>
    </section>
`);