    <div class="field">
        <%= f.hidden_field :pharmacy_id, id:"batchId", class:"batch-id", value:"#{@pharmacy.id}" %>
    </div>
    <div class="actions">
        <%= f.submit "Add", class:"btn btn-primary btn-block", style:"display: none;" %>
    </div>
<% end %>