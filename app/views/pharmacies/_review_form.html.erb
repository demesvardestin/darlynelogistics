<%= form_for(@review, :html => {:id => "reviewForm", :multipart => true, :remote => true}) do |f| %>
    <% if @review.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@review.errors.count, "error") %> prohibited this rx from being saved:</h2>
    
          <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
        <%= f.text_field :content, class:"form-control no-box-shadow no-border no-horizontal-padding", autofocus: true, placeholder:"Write your review", id:"review_input" %>
