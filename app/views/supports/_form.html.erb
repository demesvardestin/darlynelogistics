<%= form_for(@support) do |f| %>
    <% if @support.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@support.errors.count, "error") %> prohibited this form from being saved:</h2>
    
          <ul>
          <% @support.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
        <%= f.text_area :question_details, class:"form-control batch-notes-field", autofocus: true, placeholder:"What can we help you with?" %>
    </div>
    <div class="actions text-right">
        <span class="submit-batch batch-new-1"><%= f.submit "Submit form", class:"btn btn-light new-batch-button"%></span>
    </div>
<% end %>