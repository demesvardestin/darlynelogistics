<link class="stylesheet" href="devise.css">

<div class="row" id="pharmacy-login">
  <div class="col-md-4 offset-md-4 pharmacy-login-form">
    <div class="header"><h4 class="text-center medium-gray"><%= path %> login</h4></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.email_field :email, class:"form-control form--control font-14", autofocus: true, placeholder:" " %>
        <label for="email">Email</label>
      </div>
    
      <div class="field">
        <%= f.password_field :password, class:"form-control form--control font-14", autocomplete: "off", placeholder:" " %>
        <label for="password">Password</label>
      </div>
    
      <div class="actions" style="padding-top: 30px;">
        <div class="row">
          <div class="col-md-12">
            <%= f.submit "Log in", class:"btn btn-light btn-block" %>
          </div>
          <div class="col-md-12 add-padding-top">
            <%= link_to "Register", courier_signup_path, class:"btn btn-info btn-block white" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
